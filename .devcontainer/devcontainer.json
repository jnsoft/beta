{
    "name": "Go Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "go.gopath": "/go",
                "go.toolsGopath": "/go"
            },
            "extensions": [
                "golang.go",
                "ms-vscode.go"
            ]   
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "go mod tidy",
    "remoteUser": "vscode"
}
